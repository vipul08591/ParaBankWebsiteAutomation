<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Console Logs -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%level] %c{1} - %msg%n"/>
        </Console>

        <!-- File Logs -->
        <File name="FileLogger" fileName="logs/automation.log" append="true">
            <PatternLayout>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%level] %c{1} - %msg%n</pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>
